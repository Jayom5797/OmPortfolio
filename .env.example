# PostgreSQL Database (Required for comments, likes, and contacts)
# Get from Railway: https://railway.app/
DATABASE_URL=postgresql://user:password@host:port/database

# Admin Secret Key (for approving comments and initializing database)
ADMIN_SECRET_KEY=your_secure_random_key

# News API Configuration (Optional - for news widget)
# Get your API key from https://newsapi.org/
NEWS_URL_QUERY=https://newsapi.org/v2/top-headlines?country=us&category=technology&apiKey
NEWS_API_KEY=your_news_api_key

# Twilio WhatsApp Configuration (Optional - for contact form notifications)
# Get credentials from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+your_phone_number_with_country_code
